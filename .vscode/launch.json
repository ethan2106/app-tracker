{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Listen for Xdebug",
            "type": "php",
            "request": "launch",
            "port": 9003,
            "pathMappings": {
                "/app": "${workspaceFolder}"
            }
        },
        {
            "name": "Launch built-in server",
            "type": "php",
            "request": "launch",
            "program": "${workspaceFolder}/index.php",
            "runtimeArgs": [
                "-S",
                "localhost:8000",
                "-t",
                "${workspaceFolder}"
            ],
            "env": {
                "XDEBUG_MODE": "debug"
            },
            "console": "integratedTerminal"
        }
    ]
}